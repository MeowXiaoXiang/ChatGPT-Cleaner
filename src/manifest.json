{
    "manifest_version": 3,
    "name": "__MSG_extName__",
    "version": "1.0",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "action": {
        "default_title": "__MSG_extName__"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/chat-icon-16.png",
        "48": "icons/chat-icon-48.png",
        "128": "icons/chat-icon-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/chat-mono.svg",
                "icons/chat-icon.svg"
            ],
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ]
        }
    ]
}