{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
